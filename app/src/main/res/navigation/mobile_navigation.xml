<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_songs">

    <fragment
        android:id="@+id/navigation_songs"
        android:name="com.derron.musicplayer.ui.songs.SongFragment"
        android:label="@string/title_song"
        tools:layout="@layout/fragment_songs" />

    <fragment
        android:id="@+id/navigation_playlist"
        android:name="com.derron.musicplayer.ui.playlist.PlaylistFragment"
        android:label="@string/title_playlist"
        tools:layout="@layout/fragment_playlist" />

    <fragment
        android:id="@+id/navigation_album"
        android:name="com.derron.musicplayer.ui.album.AlbumFragment"
        android:label="@string/title_album"
        tools:layout="@layout/fragment_album" />
</navigation>